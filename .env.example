# Silvera V2 Production Environment Configuration
# Copy this to .env and fill in your values

# Server
PORT=3865
NODE_ENV=production

# JWT Configuration (generate a strong random string)
JWT_SECRET=your-strong-jwt-secret-here

# Database (SQLite path for Docker volume)
DATABASE_PATH=/data/silvera.db

# Email Service Configuration (Nodemailer)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@domain.com

# Payment Gateway Configuration
NEXUSPAY_BASE_URL=https://nexuspay.cloud/api
NEXUSPAY_USERNAME=your-nexuspay-username
NEXUSPAY_PASSWORD=your-nexuspay-password
NEXUSPAY_MERCHANT_ID=your-nexuspay-merchant-id
NEXUSPAY_KEY=your-nexuspay-key

# MinIO S3 Storage (required for image uploads)
MINIO_BUCKET=silvera
MINIO_INTERNAL_ENDPOINT=http://your-minio-host:9000
MINIO_PUBLIC_URL=https://your-s3-public-url
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key

# Admin Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-admin-password-hash

# Logging
LOG_LEVEL=info
